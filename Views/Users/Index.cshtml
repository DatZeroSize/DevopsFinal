@model IEnumerable<DevopsFinal.Models.User>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Quản lý Users";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white border-0 pt-4 pb-0">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="mb-1" style="color: var(--gray-800); font-weight: 700;">Danh sách Users</h2>
                            <p class="text-muted mb-0">Quản lý thông tin người dùng trong hệ thống</p>
                        </div>
                        <a href="/Users/Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Thêm User mới
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width: 35%;">
                                            <i class="fas fa-user me-2"></i>Tên
                                        </th>
                                        <th scope="col" style="width: 45%;">
                                            <i class="fas fa-envelope me-2"></i>Email
                                        </th>
                                        <th scope="col" style="width: 20%;" class="text-center">
                                            <i class="fas fa-cogs me-2"></i>Hành động
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle me-3">
                                                        @user.Name.Substring(0, 1).ToUpper()
                                                    </div>
                                                    <span class="fw-medium">@user.Name</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">@user.Email</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="/Users/Delete/@user.Id" 
                                                   class="btn btn-outline-danger btn-sm btn-delete-user"
                                                   data-user-name="@user.Name">
                                                    <i class="fas fa-trash me-1"></i>Xóa
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                <h4 class="text-muted">Chưa có user nào</h4>
                                <p class="text-muted mb-4">Hãy thêm user đầu tiên để bắt đầu</p>
                                <a href="/Users/Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Thêm User đầu tiên
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>