@model IEnumerable<DevopsFinal.Models.User>

@{
    Layout = null;
}

<style>
    table {
        border-collapse: collapse;
        width: 80%;
        margin-top: 20px;
        font-family: Arial, sans-serif;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    thead tr {
        background-color: #007ACC;
        color: white;
        text-align: left;
    }
    th, td {
        padding: 12px 15px;
        border: 1px solid #ddd;
    }
    tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }
    tbody tr:hover {
        background-color: #d1e7ff;
    }
    a.button-link {
        display: inline-block;
        padding: 6px 12px;
        background-color: #e74c3c;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
    }
    a.button-link:hover {
        background-color: #c0392b;
    }
    h2 {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }
    p.add-user {
        margin-top: 10px;
    }
    p.add-user a {
        background-color: #28a745;
        color: white;
        padding: 8px 14px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
    }
    p.add-user a:hover {
        background-color: #218838;
    }
</style>

<h2>Danh sách Users</h2>

<p class="add-user"><a href="/Users/Create">Thêm User mới</a></p>

<table>
    <thead>
        <tr><th>Name</th><th>Email</th><th>Hành động</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a class="button-link" href="/Users/Delete/@user.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
