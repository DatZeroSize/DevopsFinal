@model DevopsFinal.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Xác nhận xóa User";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card delete-confirmation-card">
                <div class="card-body text-center p-5">
                    <div class="warning-icon mb-4">
                        <i class="fas fa-exclamation-triangle fa-4x text-warning"></i>
                    </div>
                    
                    <h2 class="mb-3" style="color: var(--gray-800); font-weight: 700;">Xác nhận xóa User</h2>
                    
                    <div class="user-info mb-4 p-3" style="background-color: var(--gray-50); border-radius: 0.75rem;">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <div class="avatar-circle large me-3">
                                @Model.Name.Substring(0, 1).ToUpper()
                            </div>
                            <div class="text-start">
                                <h5 class="mb-1 fw-bold">@Model.Name</h5>
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-muted mb-4">
                        Bạn có chắc chắn muốn xóa user này không? 
                        <br><strong class="text-danger">Hành động này không thể hoàn tác!</strong>
                    </p>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-3 justify-content-center">
                            <a href="/Users" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Hủy bỏ
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>