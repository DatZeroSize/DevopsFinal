@model DevopsFinal.Models.User
@{
    Layout = null;
}
<style>
    form {
        max-width: 400px;
        margin-top: 30px;
        font-family: Arial, sans-serif;
        background-color: #fff6f6;
        padding: 25px;
        border: 1.5px solid #f5c6cb;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(245, 198, 203, 0.4);
    }

    h2 {
        color: #b52b27;
    }

    p {
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 25px;
    }

    strong {
        color: #b52b27;
    }

    button[type="submit"] {
        background-color: #d9534f;
        color: white;
        font-weight: 700;
        padding: 12px 25px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
        margin-right: 15px;
    }

        button[type="submit"]:hover {
            background-color: #c9302c;
        }

    a {
        font-weight: 600;
        color: #555;
        text-decoration: none;
        padding: 12px 20px;
        border-radius: 6px;
        border: 1.5px solid #bbb;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        a:hover {
            background-color: #eee;
            color: #333;
            border-color: #888;
        }
</style>

<h2>Xác nhận xóa User</h2>

<p>Bạn có chắc muốn xóa User: <strong>@Model.Name</strong> không?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Xóa</button>
    <a href="/Users">Hủy</a>
</form>
