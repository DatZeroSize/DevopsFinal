@model DevopsFinal.Models.User
@{
    Layout = "_Layout";
    ViewData["Title"] = "Thêm User mới";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card create-user-card">
                <div class="card-header bg-white border-0 text-center pt-4">
                    <div class="create-icon mb-3">
                        <i class="fas fa-user-plus fa-3x text-primary"></i>
                    </div>
                    <h2 class="mb-1" style="color: var(--gray-800); font-weight: 700;">Thêm User mới</h2>
                    <p class="text-muted mb-0">Điền thông tin để tạo tài khoản người dùng mới</p>
                </div>
                
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="createUserForm">
                        <div class="mb-4">
                            <label for="Name" class="form-label fw-semibold">
                                <i class="fas fa-user me-2 text-primary"></i>Họ và tên
                            </label>
                            <input asp-for="Name" type="text" class="form-control form-control-lg" 
                                   placeholder="Nhập họ và tên" required />
                            <div class="form-text">Vui lòng nhập họ và tên đầy đủ</div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Địa chỉ Email
                            </label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" 
                                   placeholder="example@email.com" required />
                            <div class="form-text">Email sẽ được sử dụng để đăng nhập</div>
                        </div>
                        
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Tạo User
                            </button>
                            <a href="/Users" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Trở về danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize form handling for this specific page
        document.addEventListener('DOMContentLoaded', function() {
            DevopsFinal.handleFormSubmission('createUserForm', 'User đã được tạo thành công!');
        });
    </script>
}